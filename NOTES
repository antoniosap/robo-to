conda deactivate
sudo apt install ros-foxy-desktop
sudo apt install ~nros-foxy-rqt*
rosdep update

NUOVI PACKAGES:
cd <..>/src
git clone ....
cd ..
rosdep install -i --from-path src --rosdistro foxy
colcon build

DOCKER:
docker run -it  -v="/home/aldebaran/workspace-ros2/:/home/" --name=ros2 ros:foxy bash

